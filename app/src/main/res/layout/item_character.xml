<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">

        <ImageView
            android:id="@+id/characterImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_vertical"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_launcher_background"
            android:layout_marginEnd="12dp"
            android:background="@drawable/image_background"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/characterName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Michael Jenkins"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/white"/>

            <TextView
                android:id="@+id/characterStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dead - Human"
                android:textColor="#E57373"
                android:textSize="14sp"
                android:layout_marginTop="2dp"/>

            <TextView
                android:id="@+id/characterLocationLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last known location:"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/characterLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interdimensional Cable"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/characterEpisodeLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="First seen in:"
                android:textColor="#AAAAAA"
                android:textSize="12sp"
                android:layout_marginTop="6dp"/>

            <TextView
                android:id="@+id/characterEpisode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Interdimensional Cable 2: Tempting Fate"
                android:textColor="@android:color/white"
                android:textSize="14sp"/>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>