<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.detailed.DetailedActivity">

    <ImageView
        android:id="@+id/iv_character_image"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_vertical"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/container_dt"
        android:layout_marginBottom="-30dp"
        tools:src="@drawable/ic_launcher_background"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/container_dt"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:src="@drawable/detailed_bg"/>

        <TextView
            android:id="@+id/tv_name_dt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rick Sanches"
            android:layout_marginHorizontal="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:textSize="26sp"
            android:textStyle="bold"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginTop="10dp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/life_status_circle_dt"
            android:layout_width="12dp"
            android:layout_height="12dp"
            android:src="@drawable/life_status_circle"
            android:layout_marginEnd="4dp"
            app:layout_constraintEnd_toStartOf="@id/tv_status_dt"
            app:layout_constraintTop_toTopOf="@id/tv_status_dt"
            app:layout_constraintBottom_toBottomOf="@id/tv_status_dt"/>

        <TextView
            android:id="@+id/tv_status_dt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Dead"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_marginStart="14dp"
            app:layout_constraintTop_toBottomOf="@id/tv_name_dt"
            app:layout_constraintStart_toStartOf="@id/tv_name_dt"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tv_species_dt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text=" - Human"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_name_dt"
            app:layout_constraintStart_toEndOf="@id/tv_status_dt"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/gender_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gender:"
            android:textColor="@color/tv_gray"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_status_dt"
            app:layout_constraintStart_toStartOf="@id/tv_name_dt"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_gender_dt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Male"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/gender_type"
            app:layout_constraintStart_toStartOf="@id/tv_name_dt"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last known location:"
            android:textColor="@color/tv_gray"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_gender_dt"
            app:layout_constraintStart_toStartOf="@id/tv_name_dt"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_location_dt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Citadel of Rickes"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/location"
            app:layout_constraintStart_toStartOf="@id/tv_name_dt"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/first_seen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="First seen in:"
            android:textColor="@color/tv_gray"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/tv_location_dt"
            app:layout_constraintStart_toStartOf="@id/tv_name_dt"
            android:layout_marginTop="16dp" />

        <TextView
            android:id="@+id/tv_first_seen_dt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Pilot"
            android:singleLine="true"
            android:ellipsize="end"
            android:textColor="@color/white"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/first_seen"
            app:layout_constraintStart_toStartOf="@id/tv_name_dt"
            android:layout_marginTop="2dp"/>

        <TextView
            android:id="@+id/tv_episodes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Season 1\nSeason 1\nSeason 1\nSeason 1\nSeason 1\nSeason 1\nSeason 1\nSeason 1\nSeason 1\nSeason 1\nSeason 1\n"
            android:singleLine="false"
            android:maxLines="7"
            android:ellipsize="end"
            app:layout_constraintTop_toBottomOf="@id/tv_first_seen_dt"
            app:layout_constraintStart_toStartOf="@id/tv_name_dt"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:layout_marginTop="12dp"
            android:paddingBottom="14dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>






</androidx.constraintlayout.widget.ConstraintLayout>